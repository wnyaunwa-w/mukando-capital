rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Avatars: Users can only write to their own avatar path.
    // Avatars are publicly readable.
    match /avatars/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Landing Page Images: Publicly readable, but only authenticated users can upload/change them.
    match /landing-images/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
  }
}
